@page "/addtodo"

<PageTitle>Add ToDo</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-8">
        <h1 class="text-center">Add To Do</h1>
        <form @onsubmit="AddToDoToDb">
            <div class="form-group">
                <label for="description">Description<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="description" @bind="ToDo.Description" placeholder="Add details..." required="required"/>
            </div>
            <div class="form-group">
                <label for="dueDate" class="mt-3">Due Date<span class="text-danger">*</span></label>
                <input type="datetime-local" class="form-control" id="dueDate" @bind="ToDo.DueDate" required="required"/>
            </div>
            <button type="submit" class="btn btn-success mt-2 justify-content-center">Add ToDo</button>

        </form>
        @if (Added)
        {
            <p class="text-success mt-2">To do added successfully!</p>
        }
    </div>
</div>