@page "/updateplant/{Id}"

<PageTitle>Update Plant</PageTitle>

<div class="row justify-content-center">
    <div class="col-md-8">
        <h1 class="text-center">Update Plant</h1>
        <form @onsubmit="UpdatePlantDb">
            <div class="form-group">
                <label for="name">Name<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="name" @bind="Plant.Name" required="required"/>
            </div>
            <div class="form-group">
                <label for="description" class="mt-3">Description<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="description" @bind="Plant.Description" required="required"/>
            </div>
            <div class="form-group">
                <label for="plantingDate" class="mt-3">Planting Date<span class="text-danger">*</span></label>
                <input type="date" class="form-control" id="plantingDate" @bind="Plant.PlantingDate" required="required"/>
            </div>
            <div class="form-group">
                <label for="growthDuration" class="mt-3">Growth Duration (days)<span class="text-danger">*</span></label>
                <input type="number" class="form-control" id="growthDuration" @bind="Plant.GrowthDuration" required="required"/>
            </div>
            <div class="form-group">
                <label for="wateringSchedule" class="mt-3">Watering Schedule (e.g., daily, weekly)<span class="text-danger">*</span></label>
                <input type="text" class="form-control" id="wateringSchedule" @bind="Plant.WateringSchedule" required="required"/>
            </div>
            <button type="submit" class="btn btn-success mt-2 justify-content-center">Update</button>
        </form>

        @if (Updated)
        {
            <p class="text-success mt-2">Plant updated successfully!</p>
        }
    </div>
</div>